<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_distance_10dp"
        android:paddingLeft="@dimen/padding_distance_20dp"
        android:paddingRight="@dimen/padding_distance_10dp"
        android:paddingTop="@dimen/padding_distance_10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_setting_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_36" />

            <TextView
                android:id="@+id/tv_setting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_distance_5dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="Lorem ipsum dolor sit amet"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/margin_distance_10dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switchCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:padding="@dimen/padding_distance_10dp"
            android:background="@android:color/transparent"
            android:shadowColor="@color/green"
            android:theme="@color/green" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/thickness_mini"
        android:background="@color/gray"
        android:layout_marginLeft="@dimen/padding_distance_20dp"
        android:layout_marginRight="@dimen/padding_distance_20dp" />
</LinearLayout>