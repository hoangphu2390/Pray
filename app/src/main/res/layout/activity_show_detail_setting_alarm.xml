<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_background_blur" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_distance_10dp"
            android:layout_marginRight="@dimen/margin_distance_10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/margin_distance_10dp"
                android:layout_marginTop="@dimen/margin_distance_15dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/icn_close_x" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_distance_20dp"
                android:text="12:30"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_80" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_distance_10dp"
                android:text="Friday, December 9"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="@dimen/text_size_20" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_distance_20dp"
                android:layout_marginRight="@dimen/padding_distance_20dp"
                android:layout_marginTop="@dimen/margin_distance_50dp"
                android:gravity="center"
                android:text="App Nameàdfdsfsdfsdfsfsdfsdfsdfsdsdf"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_40" />

            <TextView
                android:id="@+id/tv_blessed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_distance_10dp"
                android:text="I’m blessed"
                android:textColor="@color/green_text"
                android:textSize="@dimen/text_size_20"
                android:textStyle="italic|bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_distance_40dp"
                    android:background="@drawable/bg_red_btn_snooze"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_distance_10dp"
                    android:paddingLeft="@dimen/margin_distance_30dp"
                    android:paddingRight="@dimen/margin_distance_30dp"
                    android:paddingTop="@dimen/margin_distance_10dp"
                    android:text="Mute"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_24" />

                <TextView
                    android:id="@+id/tv_snooze"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_distance_10dp"
                    android:layout_marginRight="@dimen/padding_distance_50dp"
                    android:layout_marginTop="@dimen/margin_distance_40dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_green_btn_snooze"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_distance_10dp"
                    android:paddingLeft="@dimen/margin_distance_15dp"
                    android:paddingRight="@dimen/margin_distance_15dp"
                    android:paddingTop="@dimen/margin_distance_10dp"
                    android:text="Snooze"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_24" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_distance_30dp"
                android:text="View"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_24" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>